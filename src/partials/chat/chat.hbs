<div class="chat">
    <div class="chat-title">
        <div class="chat-people">
            <div class="chat-people__img">
                <!--                <img src="#" alt="Изображение собеседника">-->
            </div>
            <h2 class="chat-people__name">Андрей</h2>
        </div>
        <div class="chat-menu">
            <div class="submenu">
                <div class="submenu-item_plus">Добавить пользователя
                </div>
                <div class="submenu-item_delete">Удалить пользователя
                </div>
            </div>
        </div>
    </div>
    <div class="chat-main">


        <h3 class="chat__day">19 июня</h3>

        <div class="chat__content">
                    {{{messageFrom1}}}
                    {{{messageFrom2}}}
                    {{{messageTo1}}}
                    {{{messageTo2}}}
                    {{{messageTo3}}}
        </div>
    </div>
    <div class="chat-newMessage">
        <div class="chat-addFile"></div>
        {{{inputMessage}}}
        <button class="chat-pushNewMessage"></button>
    </div>
</div>
