<div class='{{class}}'>
    <label for='input' class='form-title'>{{text}}</label>
    <input
            id='input'
            type='{{type}}'
            name='{{name}}'
            class='input'
            placeholder="{{placeholder}}"
            value="{{value}}"
        {{#if readonly}}
            readonly
            disabled
        {{/if}}
    />
    <div class='error'></div>
</div>
